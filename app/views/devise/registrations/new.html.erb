<div class="border-form-div">

  <h2><%= t('devise.sign_up') %></h2>
  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :required => true, :autofocus => true, :placeholder => t('devise.email') %>
    <%= f.password_field :password, :required => true, :placeholder => t('devise.password') %>
    <%= f.password_field :password_confirmation, :required => true, :placeholder => t('devise.password_confirmation') %>
    <%= f.submit t('devise.sign_up'), :class=>'btn btn-primary' %>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>
